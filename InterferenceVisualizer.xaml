<Window x:Class="Interference.InterferenceVisualizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interference"
        xmlns:graphcontrol="clr-namespace:GraphControl;assembly=GraphControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Margin="3"  Orientation="Horizontal" Background="Gray" Grid.Row="0">
            <Button Click="Button_Click" Padding="5">Screenshot</Button>
        </StackPanel>
        <ContentControl Name="MainSpot" Grid.Row="1"/>
    </Grid>
</Window>
